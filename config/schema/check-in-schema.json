{
    "$id": "https://greenway.lbdscouts.org.uk/check-in-schema.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "properties": {
        "checkpoint_id": {
            "$ref": "#/definitions/uuid"
        },
        "entry_id": {
            "$ref": "#/definitions/uuid"
        },
        "participants": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "#/definitions/uuid"
            }
        }
    },
    "definitions": {
        "uuid": {
            "type": "string",
            "minLength": 36,
            "pattern": "^[0-9a-f]{8}-([0-9a-f]{4}-){3}[0-9a-f]{12}$"
        }
    },
    "required": [
        "checkpoint_id",
        "entry_id",
        "participants"
    ]
}
